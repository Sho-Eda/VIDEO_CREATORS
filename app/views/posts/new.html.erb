<div class="post_new">

  <%= form_with(model: @post, local: true) do |f| %>
    <div class="image_post">
        <%= f.label :image, 'HEADER IMAGE', class: "image_input_btn" %>
        <%= f.file_field :image, :accept => 'image/*', class: "image_form", style: "display:none;" %>
    </div>   
      
    <div class="form-group ">
      <div class="row">
        <div class="col-8 center-block">
          <%= f.text_field :title, class: 'title form-control', placeholder: "title", size: "130x7" %>
          <%= f.text_area :content, class: 'text form-control', placeholder: "ご自由にお書きください。", size: "30x30" %>
          <%= f.submit 'POST', class: 'btn btn-primary btn-block' %>
        </div>  
      </div>      
    </div>     

  <div class="append__category">
  <div class="category">
    <div class="form__label">
      <div class="weight-bold-text lavel__name ">
        Category
      </div>
      <div class="lavel__Required">
        <%= f.collection_select :category_id, @parents, :id, :name,{ include_blank: "選択してください"},class:"serect_field", id:"post_category_id" %>
      </div>
    </div>
  </div>
  </div>

  <% end %>


</div>