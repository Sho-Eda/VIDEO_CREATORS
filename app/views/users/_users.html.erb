<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.avatar? %>
          <%= image_tag user.avatar_url(:thumb), class: "mr-2 rounded" %>
          <!--<img class="mr-2 rounded" src="<= gravatar_url(user, { size: 50 }) %>" alt="">-->
        <% else %>
          <%= image_tag "/assets/default-avatar.png", :size => "60x60", class: "mr-2 rounded" %>
          <%#= image_tag("default-image.png", :size => "40x40") %>
        <% end %>

        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>