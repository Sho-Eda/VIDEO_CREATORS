<div class="users_list">
  <% if users.any? %>
    <ul class="user_list">
      <% users.each do |user| %>
        <li class="user_list_icon">
          <% if user.avatar? %>
            <%=link_to image_tag(user.avatar_url, class: "user_icon"),user_path(user) %>
          <% else %>
            <%=link_to image_tag "/assets/default-avatar.png", :size => "132x132", class: "mr-2 rounded" %>
          <% end %>

          <div class="user_list_text">
            <div>
              <p><%=link_to user.name, user_path(user) %></p>
            </div>
          </div>

        </li>
      <% end %>
    </ul>
    <%= paginate users %>
  <% end %>

</div>